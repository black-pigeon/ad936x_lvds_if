#define GPIO_SYNC_PIN				5 + 54
#define GPIO_EN_AGC				6 + 54
#define GPIO_CTL0_PIN				7 + 54
#define GPIO_CTL1_PIN				8 + 54
#define GPIO_CTL2_PIN				9 + 54
#define GPIO_CTL3_PIN				10 + 54
#define GPIO_LEDR_TRX1   			11 + 54
#define GPIO_LEDG_TRX1   			12 + 54
#define GPIO_LEDB_TRX1   			13 + 54
#define GPIO_LEDR_TRX2   			14 + 54
#define GPIO_LEDG_TRX2   			15 + 54
#define GPIO_LEDB_TRX2   			16 + 54

#define GPIO_DAC_R1_MODE   			17 + 54
#define GPIO_ADC_R1_MODE   			18 + 54
